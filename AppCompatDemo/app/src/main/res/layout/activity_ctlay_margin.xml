<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 正居中, 相当于centerInParent=true -->
    <Button android:id="@+id/btnA" style="@style/both_wrap" android:text="Button A"
        android:layout_marginLeft="50dp" android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
        />

    <Button android:id="@+id/btnB" style="@style/both_wrap" android:text="Button B"
        app:layout_constraintLeft_toRightOf="@id/btnA" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="40dp" android:layout_marginTop="40dp"
        app:layout_goneMarginLeft="250dp" app:layout_goneMarginTop="250dp"
        />


</android.support.constraint.ConstraintLayout>