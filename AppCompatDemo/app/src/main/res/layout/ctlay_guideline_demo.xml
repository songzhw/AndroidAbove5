<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline android:id="@+id/gline_vertical" style="@style/both_wrap"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintGuide_percent="0.5" android:orientation="vertical"
        />

    <Button style="@style/both_wrap" android:text="A"
        app:layout_constraintRight_toLeftOf="@id/gline_vertical"
        android:layout_marginRight="20dp"
        />

    <Button style="@style/both_wrap" android:text="B"
        app:layout_constraintLeft_toRightOf="@id/gline_vertical"
        android:layout_marginLeft="20dp"/>

</android.support.constraint.ConstraintLayout>