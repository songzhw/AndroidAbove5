<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView android:id="@+id/tvWeight1" style="@style/wid0.tv" android:background="#f00" android:text="AAA"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/spaceWeight12"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        />

    <View android:id="@+id/spaceWeight12" android:layout_width="10dp" android:layout_height="10dp"
        app:layout_constraintLeft_toRightOf="@id/tvWeight1" app:layout_constraintRight_toLeftOf="@+id/tvWeight2"
        />

    <TextView android:id="@+id/tvWeight2" style="@style/wid0.tv" android:background="#0f0" android:text="BBB"
        app:layout_constraintLeft_toRightOf="@id/spaceWeight12" app:layout_constraintRight_toLeftOf="@+id/spaceWeight23"
        app:layout_constraintHorizontal_weight="1"
        />

    <View android:id="@+id/spaceWeight23" android:layout_width="10dp" android:layout_height="10dp"
        app:layout_constraintLeft_toRightOf="@id/tvWeight2" app:layout_constraintRight_toLeftOf="@+id/tvWeight3"
        />

    <TextView android:id="@+id/tvWeight3" style="@style/wid0.tv" android:background="#00f" android:text="CCC"
        app:layout_constraintLeft_toRightOf="@id/spaceWeight23" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        />

</android.support.constraint.ConstraintLayout>