<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_top_name" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
        tools:text="kitty" android:textSize="22dp" android:layout_marginTop="10dp" android:paddingBottom="20dp"/>

    <ImageView android:id="@+id/iv_top_icon" android:layout_width="58dp" android:layout_height="58dp"
        tools:src="@drawable/ic_pets" android:layout_above="@id/tv_top_name"/>

</RelativeLayout>
