<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="50dp"
    android:orientation="vertical">

    <cn.six.sup.rv.swipe_menu.SwipeMenuLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="50dp" android:background="#b9f6ca">
            <ImageView android:id="@+id/ivRvItemSwipe" android:layout_width="50dp" android:layout_height="50dp"
                android:src="@drawable/ic_launcher"  />
            <TextView android:id="@+id/tvRvItemSwipe" android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:text="Single Item" android:textSize="22dp" android:textColor="#000" android:gravity="center"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="50dp">
            <TextView android:id="@+id/tvRvItemSwipeMenu" android:layout_width="wrap_content" android:layout_height="fill_parent" android:padding="10dp"
                android:text="Delete" android:textSize="18dp" android:textColor="#F06292" android:background="#90caf9" android:gravity="center"/>
        </LinearLayout>
    </cn.six.sup.rv.swipe_menu.SwipeMenuLayout>

</LinearLayout>