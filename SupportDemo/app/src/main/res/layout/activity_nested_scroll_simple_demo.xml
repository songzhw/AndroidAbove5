<?xml version="1.0" encoding="utf-8"?>
<ca.six.mydemo.clay.nestedscroll.StickyMiddleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/west_lake"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent" android:layout_height="50dp" android:background="@color/colorAccent"
        android:text="梅自苦寒来" android:gravity="center" android:textSize="22dp"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/large_text" />
    </android.support.v4.widget.NestedScrollView>

</ca.six.mydemo.clay.nestedscroll.StickyMiddleLayout>
