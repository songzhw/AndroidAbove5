<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvBottomMenuPhoto"
        android:layout_width="wrap_content" android:layout_height="80dp"
        android:text="Take Photo" android:textSize="26dp" android:layout_marginLeft="20dp"
        android:gravity="center" android:drawableLeft="@drawable/ic_pets" />

    <TextView android:id="@+id/tvBottomMenuGallery"
        android:layout_width="wrap_content" android:layout_height="80dp"
        android:text="Take From Gallery" android:textSize="26dp" android:layout_marginLeft="20dp"
        android:gravity="center" android:drawableLeft="@drawable/in_icon" />

    <TextView android:id="@+id/tvBottomMenuCall"
        android:layout_width="wrap_content" android:layout_height="80dp"
        android:text="Call ***" android:textSize="26dp" android:layout_marginLeft="20dp"
        android:gravity="center" android:drawableLeft="@drawable/ic_launcher" />

</LinearLayout>