<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/ctlayAnim"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button android:id="@+id/btnAnimApply"
        android:layout_width="0dp" android:layout_height="50dp"
        android:text="Apply" android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toLeftOf="@+id/btnAnimReset"
        />

    <Button android:id="@+id/btnAnimReset"
        android:layout_width="0dp" android:layout_height="50dp" android:layout_marginLeft="30dp"
        android:text="Reset" android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toRightOf="@+id/btnAnimApply" app:layout_constraintRight_toRightOf="parent"
        />




</android.support.constraint.ConstraintLayout>